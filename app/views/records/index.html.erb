<div class="container">
  <h2 class="text-center">『<%= current_user.name %>さんの記録』</h2>

  <%= month_calendar attribute: :start_date, events: @records do |date, records| %>
    <%= date.day %><br>
        <% records.each do |record| %>
          <% if record.stoped_time  %>
            <%= link_to record_path(record.id), class: "text-danger h6" do %>
              <%= Time.at(record.stoped_time - record.starting_time).strftime("%M分 %S秒") %>
             <% end %>
          <% end%>
        <% end %>
  <% end %>
</div>


