<div class="container">
<h2 class="text-center"><%= current_user.name %>さん記録</h2>



  <%= month_calendar attribute: :start_date, events: @records do |date, records| %>
    <%= date.day %><br>
      <div class="link-danger h6">
        <% records.each do |record| %>
          <% if record.stoped_time  %>
            <%= link_to record_path(record.id) do %>
              <%= Time.at(record.stoped_time - record.starting_time).strftime("%M分 %S秒") %>
             <% end %>
          <% end%>
        <% end %>
      </div>
  <% end %>
</div>


