<h1>タイムの追加</h1>

<%= form_with(model: @record, local: true) do |form| %>

  <div class="start_time">
    <%= form.label :開始時間 %>
    <%= form.datetime_select :start_time %>
  </div>

  <div class="stoped_time">
    <%= form.label :終了時間 %>
    <%= form.datetime_select :stoped_time %>
  </div>

  <div class="submit">
    <%= form.submit %>
  </div>

<% end %>