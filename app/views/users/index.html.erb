<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h4>会員</h4>
      <table class="table">
        <tr>
          <th>ニックネーム : </th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <td>フォロー数: <%= @user.followings.count %></td>
          <td>フォロワー数: <%= @user.followers.count %></td>
        </tr>
      </table>
       <% if @user == current_user %>
           <%= link_to "会員情報編集", edit_user_path(current_user), class: 'btn btn-outline-secondary btn-block' %>
        <% else %>
           <%= link_to "編集不可", users_path, class: 'btn btn-outline-secondary btn-block' %>
        <% end %>

    </div>

    <div class="col-md-8 offset-md-1">
  <h2>ユーザー</h2>
<table class="table">
  <thead>
    <tr>
      <th>ニックネーム</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <% @users.each do |user| %>
  <tbody>
    <tr>
      <td><%= user.name %></td>
      <td>
        <%= link_to "タイムを見る", user_path(user.id) %>
      </td>
      <td>
        <% unless current_user == user %>
          <% if current_user.following?(user) %>
            <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete %>
          <% else %>
          <%= link_to "フォローする", user_relationships_path(user.id), method: :post %>
          <% end %>
        <% end %>
      </td>
    </tr>
  </tbody>
  <% end %>
</table>
<%= paginate @users %>
  </div>
</div>