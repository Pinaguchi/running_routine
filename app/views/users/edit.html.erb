<div class="container">
  <div class="row">
    <div class="col-sm-12 col-lg-5 px-5 px-sm-0 mx-auto">
      <h3>会員情報を編集</h3>

      <% if @user.errors.any? %>
        <div class="error">
          <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with model: @user, local:true do |f| %>
        <label for="inputName">ニックネーム</label><br>
        <%= f.text_field :name, autofocus: true, id:"inputName" %><br>
        <label for="inputEmail">メールアドレス</label><br>
        <%= f.email_field :email %><br>
        <%= f.submit "編集内容を保存", class: 'btn btn-outline-danger' %><br>
      <% end %>
    </div>
  </div>
</div>